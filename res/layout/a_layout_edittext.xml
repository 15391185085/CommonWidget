<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/widget_layer" >

        <LinearLayout style="@style/widget_layer_horizontal" >

            <TextView
                android:id="@+id/text1"
                style="@style/widget_title"
                android:text="" />

            <LinearLayout
                android:id="@+id/sub_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/llFollowOrCompass"
                android:layout_alignRight="@+id/llMapLayers"
                android:background="@drawable/common_searchbox_home_bg"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageButton
                    android:id="@+id/sub"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_alibuymenu_states"
                    android:src="@drawable/main_icon_zoomout" />

                <View
                    style="@style/icon_o_line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/add"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_alibuymenu_states"
                    android:src="@drawable/main_icon_zoomin" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/edit1"
            style="@style/widget_edittext_fill"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="45dp"
            android:text="" >
        </EditText>
    </LinearLayout>

</LinearLayout>