<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_top_layer_without_projection_bg"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/cancel"
            style="@style/common_button.normal"
            android:layout_width="@dimen/widget_button_height03"
            android:layout_height="@dimen/widget_button_height01"
            android:text="取消" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/bottombar_button_margin05"
            android:paddingRight="@dimen/bottombar_button_margin05"
            android:singleLine="true"
            android:text="日期"
            android:textAppearance="@style/CommonTopBarMiddleText" />

        <Button
            android:id="@+id/confirm"
            style="@style/common_button.blue"
            android:layout_width="@dimen/widget_button_height03"
            android:layout_height="@dimen/widget_button_height01"
            android:layout_alignParentRight="true"
            android:text="确认" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/timePicker1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <com.ieds.gis.base.widget.time.WheelView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.ieds.gis.base.widget.time.WheelView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.ieds.gis.base.widget.time.WheelView
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.ieds.gis.base.widget.time.WheelView
            android:id="@+id/hour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.ieds.gis.base.widget.time.WheelView
            android:id="@+id/minute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>