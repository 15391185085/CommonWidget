<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_topbar_high"
    android:background="#0c99d9"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivfanhui"
        android:layout_width="@dimen/alert_dialog_button_height"
        android:layout_height="@dimen/alert_dialog_button_height"
        android:onClick="onClick1"
        android:scaleType="centerInside"
        android:src="@drawable/return_icon" />

    <TextView
        android:id="@+id/main_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/ivfanhui"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="分页面"
        android:textColor="@android:color/white"
        android:textSize="@dimen/common_textsize_one"
        android:textStyle="bold" >
    </TextView>

    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="@dimen/alert_dialog_button_height"
        android:layout_height="@dimen/alert_dialog_button_height"
        android:scaleType="centerInside"
        android:src="@drawable/stat_sys_download_anim" />

</LinearLayout>