<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_top_layer_without_projection_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dip"
        android:text="请选择"
        android:textColor="@color/common_text"
        android:textSize="@dimen/common_textsize_two" />

    <ListView
        android:id="@+id/cus_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/round_style_bg"
        android:cacheColorHint="@null"
        android:divider="@color/bright_foreground_light_disabled"
        android:dividerHeight="0.5dip" >
    </ListView>

    <Button
        android:id="@+id/btn_cancel"
        style="@style/Style_Dialog_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bottombar_button_margin04"
        android:text="@string/cancel" />

</LinearLayout>